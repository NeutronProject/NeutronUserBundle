        {% trans from "NeutronUserBundle" %}header.user_management{% endtrans %}
    </h1>
{% endblock %}

{% block body %}
<div class="row">
	<div class="grid12">
		<article class="panel">
		 	<header>
		 	    <h2>{% trans from "NeutronUserBundle" %}header.sub_user_management_add{% endtrans %}</h2>
		 	</header>
		 	{{ neutron_form_tabs(
		 	    form, 
		 	    {'submit_label': 'form.save', 'translation_domain': 'messages'},
		 	    {
