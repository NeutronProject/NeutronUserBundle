{% block subject %}{{ 'management.add_user.mail.subject'|trans({}, 'NeutronUserBundle') }}{% endblock %}

{% block body_html %}

<h3>{{ 'management.add_user.mail.text'|trans({}, 'NeutronUserBundle') }}</h3>

<p><label>{{ 'form.username'|trans({}, 'NeutronUserBundle') }}</label> {{ user.username }}</p>
<p><label>{{ 'form.password'|trans({}, 'NeutronUserBundle') }}</label> {{ plainPassword }}</p>

<a href="{{ loginUrl }}">{{ 'login_url'|trans({}, 'NeutronUserBundle') }} }}</a>

{% endblock %}