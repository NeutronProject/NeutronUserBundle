        {% trans from "NeutronUserBundle" %}header.profile.edit{% endtrans %}    
    </h1>
{% endblock %}

{% block body %}
<div class="row">
	<div class="grid12">
		<article class="panel">
		 	<header>
		 	    <h2> {% trans from "NeutronUserBundle" %}sub_header.profile.edit{% endtrans %}</h2>
		 	</header>
		 	
		 	{{ neutron_form_tabs(
		 	    form, 
		 	    {'submit_label': 'form.save', 'translation_domain': 'NeutronAdminBundle'},
