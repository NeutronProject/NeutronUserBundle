{% extends "NeutronAdminBundle::login.html.twig" %}
{% block javascripts %}
	{{ neutron_append_javascript('bundles/neutronuser/js/security/login.js') }}
	{{ parent() }}
{% endblock %}

{% block fos_user_content %}

<div id="container-error" class="msg error" style="display:none">
	<a class="close">&times;</a>
	<p style="width:250px;">
		<span></span>
	</p>

</div>

<header class="divider">
	<h2>Login</h2>
</header>


<p>
	<strong>Lorem ipsum dolor sit amet</strong>, consectetur adipiscing
	elit. Curabitur tristique facilisis mi vel sodales. Vestibulum in orci
	ut neque ultrices.
</p>

<form id="form-login" action="{{ path("fos_user_security_check") }}" method="post">
	<fieldset class="form">

		<div class="field">
			<label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
			<div class="controls">
				<input type="text" id="username" name="_username" value="{{ last_username }}" class="input" />
			</div>
		</div>
		<div class="field">
			<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
			<div class="controls">
				<input type="password" id="password" name="_password" class="input" />
			<br/><br/>
			<small>
				<a href="{{ path('fos_user_resetting_request') }}" title="{{ 'security.login.forgotten_password'|trans({}, 'NeutronUserBundle') }}">{{ 'security.login.forgotten_password'|trans({}, 'NeutronUserBundle') }}</a>
			</small>
			</div>
		</div>

		<div class="actions">

			<div class="controls">

			<button id="_submit" class="btn action">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
			<input type="checkbox" id="_remember_me" name="_remember_me" title="Remember me" value="1">
			<input id="_csrf_token" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<img id="ajax-loader" style="display:none" src="{{ neutron_base_url() }}files/images/ajax-loader.gif" />
			</div>
		</div>
	</fieldset>
</form>

{% endblock fos_user_content %}